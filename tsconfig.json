{
  "include": [
    "src",
    "tests", 
    "scripts"
  ],
  "exclude": [],
  "compilerOptions": {
    "module": "ES2022",
    "target": "ESNext",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true
  }
}